{
  "name": "@puth/monorepo",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=24.0.0"
  },
  "workspaces": [
    "workspaces/core",
    "workspaces/puth",
    "workspaces/gui",
    "workspaces/clients/js/client",
    "workspaces/clients/java/client",
    "workspaces/clients/php/client",
    "workspaces/clients/php/laravel"
  ],
  "dependencies": {
    "@changesets/cli": "^2.29.4",
    "diff-match-patch": "^1.0.5"
  },
  "scripts": {
    "build": "npm -w @puth/core run build && npm -w @puth/gui run build && npm -w @puth/client run build && npm -w puth run build",
    "dev:client": "bun --filter=@puth/gui dev",
    "dev:server": "bun --filter=puth dev",
    "dev": "bunx concurrently \"bun run dev:server\" \"bun run dev:client\"",
    "release": "changeset publish"
  },
  "license": "SEE LICENSE IN LICENCE",
  "devDependencies": {
    "@types/node": "^24.6.2",
    "pkgroll": "^2.17.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
