{
  "name": "puth",
  "version": "0.5.2",
  "author": {
    "name": "Sebastian Uehlin",
    "email": "s.uehlin@proton.me"
  },
  "description": "Puth (Puppet-Theater) is a versatile browser test framework that builds on puppeteer.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "dependencies": {
    "@fastify/cors": "^8.2.0",
    "@fastify/http-proxy": "^8.4.0",
    "@fastify/static": "^6.6.0",
    "@fastify/websocket": "^7.1.1",
    "@msgpack/msgpack": "^2.8.0",
    "@types/diff-match-patch": "^1.0.32",
    "axios": "^1.2.1",
    "chalk": "^3.0.0",
    "chokidar": "^3.5.3",
    "diff-match-patch": "^1.0.5",
    "fastify": "^4.10.2",
    "meow": "^9.0.0",
    "mitt": "^2.1.0",
    "puppeteer": "^19.4.0",
    "tmp-promise": "^2.1.1",
    "typedoc": "^0.23.22",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/assert": "^1.5.4",
    "@types/axios": "^0.14.0",
    "@types/mocha": "^8.2.2",
    "@types/node": "^18.11.15",
    "@types/uuid": "^8.3.0",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "mocha": "^10.2.0",
    "prettier": "^2.8.1",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.9.4"
  },
  "files": [
    "bin/**/*",
    "browser/**/*",
    "lib/**/*",
    "static/**/*"
  ],
  "scripts": {
    "build": "rm -rf lib/ && tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "test": "mocha --exit --timeout 15000 -r ts-node/register 'test/**/*.ts'",
    "test:only:remote": "TEST_ONLY_REMOTE=true mocha --exit --timeout 15000 -r ts-node/register 'test/**/*.ts'",
    "test:only:plugins": "mocha --exit --timeout 15000 -r ts-node/register 'test/plugins/**/*.ts'",
    "test:only:translation": "mocha --exit --timeout 15000 -r ts-node/register 'test/translation/**/*.ts'",
    "test:api": "mocha --exit -r ts-node/register 'test/api.test.ts'",
    "test:watch": "mocha -r ts-node/register --recursive -w --watch-files src,test 'test/**/*.ts'",
    "generate:doc": "typedoc node_modules/puppeteer/lib/types.d.ts --json doc/src/test.json",
    "daemon": "node src/server/daemon/daemon.js",
    "dev:client": "ts-node-dev --respawn --transpile-only src/dev/client.ts",
    "dev:server": "ts-node-dev --respawn --transpile-only src/scripts/local.ts",
    "prepublishOnly": "yarn run build && yarn test && yarn run lint && cd gui && yarn run build",
    "preversion": "yarn run lint",
    "version": "yarn run format && git add -A src",
    "postversion": "git push && git push --tags",
    "image:install": "yarn install && cd gui && yarn install",
    "image:build": "yarn run build && cd gui && yarn run build",
    "image:cleanup": "rm -rf src && rm -rf gui"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SEUH/puth"
  },
  "bin": {
    "puth": "./bin/puth.js"
  },
  "homepage": "https://puth.dev",
  "license": "UNLICENSED"
}