{
  "name": "puth",
  "version": "0.5.7",
  "author": {
    "name": "Sebastian Uehlin",
    "email": "uehlinse@gmail.com"
  },
  "description": "Puth (Puppet-Theater) is a versatile browser test framework that builds on puppeteer.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "dependencies": {
    "@msgpack/msgpack": "^2.7.1",
    "@types/diff-match-patch": "^1.0.32",
    "axios": "^0.21.1",
    "chalk": "^3.0.0",
    "chokidar": "^3.5.1",
    "diff-match-patch": "^1.0.5",
    "fastify": "^3.15.1",
    "fastify-cors": "^6.0.0",
    "fastify-http-proxy": "^5.0.0",
    "fastify-static": "^4.0.1",
    "fastify-websocket": "^3.2.0",
    "meow": "^9.0.0",
    "mitt": "^2.1.0",
    "puppeteer": "^12.0.1",
    "tmp-promise": "^2.1.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/assert": "^1.5.4",
    "@types/axios": "^0.14.0",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.43",
    "@types/puppeteer": "^5.4.3",
    "@types/uuid": "^8.3.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "mocha": "^8.3.2",
    "prettier": "^2.2.1",
    "ts-mocha": "^8.0.0",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.2.4"
  },
  "files": [
    "bin/**/*",
    "browser/**/*",
    "lib/**/*",
    "static/**/*"
  ],
  "scripts": {
    "build": "rm -rf lib/ && tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "test": "mocha --exit --timeout 5000 -r ts-node/register 'test/**/*.ts'",
    "test:only:remote": "TEST_ONLY_REMOTE=true mocha --exit --timeout 5000 -r ts-node/register 'test/**/*.ts'",
    "test:only:plugins": "mocha --exit --timeout 5000 -r ts-node/register 'test/plugins/**/*.ts'",
    "test:only:translation": "mocha --exit --timeout 5000 -r ts-node/register 'test/translation/**/*.ts'",
    "test:api": "mocha --exit -r ts-node/register 'test/api.test.ts'",
    "test:watch": "mocha -r ts-node/register --recursive -w --watch-files src,test 'test/**/*.ts'",
    "daemon": "node src/server/daemon/daemon.js",
    "dev:client": "ts-node-dev --respawn --transpile-only src/dev/client.ts",
    "dev:server": "ts-node-dev --respawn --transpile-only src/scripts/local.ts",
    "prepublishOnly": "npm run build && npm test && npm run lint && cd gui && npm run build",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "image:install": "npm install && cd gui && npm install",
    "image:build": "npm run build && cd gui && npm run build",
    "image:cleanup": "rm -rf src && rm -rf gui"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SEUH/puth"
  },
  "bin": {
    "puth": "./bin/puth.js"
  },
  "homepage": "https://puth.dev",
  "license": "LGPL-3.0-only"
}
