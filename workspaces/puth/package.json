{
  "name": "puth",
  "version": "0.7.2",
  "author": {
    "name": "Sebastian Uehlin",
    "email": "s.uehlin@proton.me"
  },
  "description": "Puth (Puppet-Theater) is a versatile browser testing framework with a powerful GUI.",
  "dependencies": {
    "@inquirer/prompts": "^5.3.8",
    "@msgpack/msgpack": "^3.1.2",
    "@puth/client": "^0.0.0",
    "@puth/core": "^0.0.0",
    "@puth/gui": "^0.1.2",
    "chokidar": "^4.0.3",
    "crossws": "^0.4.1",
    "diff-match-patch": "^1.0.5",
    "h3": "^2.0.0-beta.4",
    "meow": "^13.2.0",
    "mitt": "^3.0.1",
    "pino": "^9.9.4",
    "pino-pretty": "^13.1.1",
    "puppeteer-core": "^24.23.0",
    "sharp": "^0.34.3",
    "tmp": "^0.2.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/assert": "^1.5.7",
    "@types/diff-match-patch": "^1.0.36",
    "@types/node": "^22.5.0",
    "@types/uuid": "^9.0.4",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "prettier": "^2.8.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typedoc": "^0.26.6",
    "typescript": "^5.5.4",
    "vitest": "^3.2.4"
  },
  "files": [
    "bin/**/*",
    "browser/**/*",
    "lib/**/*",
    "static/**/*",
    "LICENCE"
  ],
  "scripts": {
    "build": "rm -rf lib/ && tsc --build --verbose --noCheck && tsc-alias",
    "dev:server": "NODE_ENV=development ts-node-dev -r tsconfig-paths/register --respawn --transpile-only src/dev/server.ts",
    "dev": "NODE_ENV=development bun --watch src/dev/server.ts",
    "dev:browser:install": "NODE_ENV=development bun src/dev/browser-install.ts",
    "dev:server:debug": "DEBUG=\"puppeteer:*\" NODE_ENV=development ts-node-dev -r tsconfig-paths/register --respawn --transpile-only src/dev/server.ts > puth.log 2> puth.cdp.log",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "vitest",
    "test:only:remote": "TEST_ONLY_REMOTE=true vitest test/api.test.ts",
    "test:only:plugins": "vitest 'tst/plugins/**/*.ts",
    "test:only:translation": "vitest test/translation/**/*.ts",
    "test:api": "vitest test/api.test.ts",
    "generate:doc": "typedoc node_modules/puppeteer/lib/types.d.ts --json doc/src/test.json",
    "prepublishOnly": "npm run build && (cd ../gui && npm run build) && npm run ci:browser:install && npm test",
    "version": "git add -A src",
    "postversion": "git push && git push --tags",
    "image:install": "npm install && cd gui && npm install",
    "image:build": "npm run build && cd gui && npm run build",
    "image:cleanup": "rm -rf src && rm -rf gui",
    "ci:browser:install": "puth browser install cwd --cleanup-other-installs"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/puth-io/puth"
  },
  "bin": "./bin/puth.js",
  "homepage": "https://puth.io",
  "license": "SEE LICENSE IN LICENCE"
}
