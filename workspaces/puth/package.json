{
  "name": "puth",
  "version": "1.0.0-alpha.0",
  "author": {
    "name": "Sebastian Uehlin",
    "email": "s.uehlin@proton.me"
  },
  "description": "Puth (Puppet-Theater) is a versatile browser testing framework with a powerful GUI.",
  "dependencies": {
    "@fastify/cors": "^8.4.0",
    "@fastify/http-proxy": "^9.2.1",
    "@fastify/static": "^6.11.2",
    "@fastify/websocket": "^8.2.0",
    "@inquirer/prompts": "^3.1.1",
    "@msgpack/msgpack": "^2.8.0",
    "@puth/core": "^0.0.0",
    "chokidar": "^3.5.3",
    "diff-match-patch": "^1.0.5",
    "fastify": "^4.23.2",
    "meow": "^9.0.0",
    "mitt": "^3.0.1",
    "pino": "^8.15.1",
    "pino-pretty": "^10.2.0",
    "puppeteer-core": "^21.3.4",
    "sharp": "^0.32.6",
    "tmp-promise": "^2.1.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@puth/client": "*",
    "@types/assert": "^1.5.7",
    "@types/diff-match-patch": "^1.0.32",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.7.0",
    "@types/uuid": "^9.0.4",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "mocha": "^10.2.0",
    "prettier": "^2.8.1",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typedoc": "^0.23.22",
    "typescript": "^4.9.4"
  },
  "files": [
    "bin/**/*",
    "browser/**/*",
    "lib/**/*",
    "static/**/*"
  ],
  "scripts": {
    "build": "rm -rf lib/ && tsc --build --verbose && tsc-alias",
    "dev:server": "NODE_ENV=development ts-node-dev -r tsconfig-paths/register --respawn --transpile-only src/dev/server.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "mocha --exit --timeout 15000 -r ts-node/register 'test/**/*.ts'",
    "test:only:remote": "TEST_ONLY_REMOTE=true mocha --exit --timeout 15000 -r ts-node/register 'test/api.test.ts'",
    "test:only:plugins": "mocha --exit --timeout 15000 -r ts-node/register 'test/plugins/**/*.ts'",
    "test:only:translation": "mocha --exit --timeout 15000 -r ts-node/register 'test/translation/**/*.ts'",
    "test:api": "mocha --exit -r ts-node/register 'test/api.test.ts'",
    "test:watch": "mocha -r ts-node/register --recursive -w --watch-files src,test 'test/**/*.ts'",
    "generate:doc": "typedoc node_modules/puppeteer/lib/types.d.ts --json doc/src/test.json",
    "prepublishOnly": "npm run build && npm test",
    "version": "git add -A src",
    "postversion": "git push && git push --tags",
    "image:install": "npm install && cd gui && npm install",
    "image:build": "npm run build && cd gui && npm run build",
    "image:cleanup": "rm -rf src && rm -rf gui",
    "ci:browser:install": "puth browser install cwd --cleanup-other-installs"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/puth-io/puth"
  },
  "bin": "./bin/puth.js",
  "homepage": "https://puth.dev",
  "license": "UNLICENSED"
}
