{
  "name": "puth",
  "version": "0.7.2",
  "author": {
    "name": "Sebastian Uehlin",
    "email": "s.uehlin@proton.me"
  },
  "type": "module",
  "bin": "./dist/cli.mjs",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "exports": {
    "require": {
      "types": "./dist/index.d.cts",
      "default": "./dist/index.cjs"
    },
    "import": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    }
  },
  "description": "Puth (Puppet-Theater) is a versatile browser testing framework with a powerful GUI.",
  "dependencies": {
    "@inquirer/prompts": "^5.3.8",
    "@msgpack/msgpack": "^3.1.2",
    "@puth/client": "^0.0.0",
    "@puth/core": "^0.0.0",
    "@puth/gui": "^0.1.2",
    "@types/diff-match-patch": "^1.0.36",
    "@types/uuid": "^9.0.4",
    "chokidar": "^4.0.3",
    "crossws": "^0.4.1",
    "h3": "^2.0.0-beta.4",
    "meow": "^13.2.0",
    "mitt": "^3.0.1",
    "pino": "^9.9.4",
    "pino-pretty": "^13.1.1",
    "puppeteer-core": "^24.23.0",
    "sharp": "^0.34.3",
    "tmp": "^0.2.5",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/assert": "^1.5.7",
    "vitest": "^3.2.4"
  },
  "files": [
    "bin/",
    "browser/",
    "dist/",
    "static/",
    "LICENCE"
  ],
  "scripts": {
    "build": "pkgroll --clean-dist",
    "dev": "tsx watch --clear-screen=false src/dev/server.ts",
    "dev:browser:install": "node src/dev/browser-install.ts",
    "dev:server": "npm run dev",
    "dev:server:debug": "DEBUG=\"puppeteer:*\" NODE_ENV=development tsx watch --clear-screen=false src/dev/server.ts > puth.log 2> puth.cdp.log",
    "test": "vitest",
    "test:only:remote": "TEST_ONLY_REMOTE=true vitest test/api.test.ts",
    "test:only:plugins": "vitest 'tst/plugins/**/*.ts",
    "test:only:translation": "vitest test/translation/**/*.ts",
    "test:api": "vitest test/api.test.ts",
    "prepublishOnly": "npm run build && (cd ../gui && npm run build) && npm run ci:browser:install && npm test",
    "version": "git add -A src",
    "postversion": "git push && git push --tags",
    "image:install": "npm install && cd gui && npm install",
    "image:build": "npm run build && cd gui && npm run build",
    "image:cleanup": "rm -rf src && rm -rf gui",
    "ci:browser:install": "npm run dev:browser:install ci",
    "ci:server": "DEBUG=\"puppeteer:*\" dist/cli.mjs start --debug > puth.log 2> puth.cdp.log"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/puth-io/puth"
  },
  "homepage": "https://puth.io",
  "license": "SEE LICENSE IN LICENCE"
}
