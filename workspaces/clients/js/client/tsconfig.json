{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2022",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "incremental": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "composite": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipDefaultLibCheck": true,
    "paths": {
      "baseUrl": ["."],
      "@/context": [
        "../../../puth/src/Context"
      ]
    },
    "lib": [
      "ES2022",
      "dom"
    ]
  },
  "include": [
    "src"
  ]
}
